@model List<LoggingDemo.Models.Product>
@{
    ViewData["Title"] = "Products Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Products Management</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New Product</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Category</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>$@product.Price.ToString("F2")</td>
                            <td>@product.Stock</td>
                            <td>@product.Category</td>
                            <td>@product.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-warning btn-sm">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>No products found</h4>
            <p class="mb-0">There are no products in the system. <a href="@Url.Action("Create")">Create the first product</a>.</p>
        </div>
    }
</div>