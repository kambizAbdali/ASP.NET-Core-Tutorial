@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="text-danger">Error.</h1>
            <h2 class="text-danger">An error occurred while processing your request.</h2>

            @if (Model?.ShowRequestId ?? false)
            {
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <div class="alert alert-warning mt-4" role="alert">
                <h4>This error has been logged</h4>
                <p class="mb-0">Check the log files in the <code>/logs</code> directory for detailed information.</p>
            </div>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
            </div>
        </div>
    </div>
</div>