@{
    ViewData["Title"] = "Empty Cart - Redis E-Commerce";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <!-- Empty Cart Illustration -->
            <div class="empty-cart-illustration mb-5">
                <div style="font-size: 8rem; opacity: 0.7;">🛒</div>
                <div class="mt-3" style="font-size: 4rem; opacity: 0.3;">😔</div>
            </div>

            <!-- Main Message -->
            <div class="mb-5">
                <h1 class="display-6 text-muted mb-3">Your cart is empty</h1>
                <p class="lead text-muted mb-4">
                    Looks like you haven't added any items to your cart yet.<br>
                    Discover our amazing products and start shopping!
                </p>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center mb-5">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg px-4 gap-3">
                    🏠 Start Shopping
                </a>
                <a href="@Url.Action("RedisDemo", "Home")" class="btn btn-outline-secondary btn-lg px-4">
                    🔧 Redis Demo
                </a>
            </div>

            <!-- Quick Product Suggestions -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">💡 Quick Add - Demo Products</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Try adding these demo products to test the Redis cart:</p>
                    <div class="row g-3">
                        @{
                            var demoProducts = new[]
                            {
                                new { Id = 1, Name = "Laptop Gaming Pro", Price = 1500.00m, Description = "High-performance gaming laptop" },
                                new { Id = 2, Name = "Wireless Headphones", Price = 200.00m, Description = "Noise-cancelling wireless headphones" },
                                new { Id = 3, Name = "Smartphone X", Price = 800.00m, Description = "Latest smartphone with advanced features" },
                                new { Id = 4, Name = "Mechanical Keyboard", Price = 120.00m, Description = "RGB mechanical keyboard for gamers" }
                            };
                        }
                        @foreach (var product in demoProducts)
                        {
                            <div class="col-md-6">
                                <div class="card h-100 product-card">
                                    <div class="card-body text-center">
                                        <div class="product-icon mb-2" style="font-size: 2rem;">📦</div>
                                        <h6 class="card-title">@product.Name</h6>
                                        <p class="card-text text-muted small">@product.Description</p>
                                        <p class="card-text text-success fw-bold">$@product.Price.ToString("F2")</p>
                                        <form method="post" asp-action="AddToCart" asp-controller="Cart">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <input type="hidden" name="quantity" value="1" />
                                            <button type="submit" class="btn btn-outline-primary btn-sm w-100">
                                                ➕ Add to Cart
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Redis Information -->
            <div class="card mt-4">
                <div class="card-body text-start">
                    <h6 class="card-title">🔍 About Redis Cart Storage</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled small">
                                <li class="mb-2">✅ <strong>Fast Access:</strong> Sub-millisecond response times</li>
                                <li class="mb-2">✅ <strong>Scalable:</strong> Handles millions of concurrent users</li>
                                <li class="mb-2">✅ <strong>Persistent:</strong> Data survives application restarts</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled small">
                                <li class="mb-2">✅ <strong>Real-time:</strong> Instant cart updates</li>
                                <li class="mb-2">✅ <strong>Reliable:</strong> Built-in replication and failover</li>
                                <li class="mb-2">✅ <strong>Flexible:</strong> Multiple data structures</li>
                            </ul>
                        </div>
                    </div>
                    <div class="mt-3 p-3 bg-light rounded">
                        <small class="text-muted">
                            <strong>Current Redis Key:</strong> <code>cart:user:1</code><br>
                            <strong>Storage Type:</strong> Hash | <strong>Status:</strong> Empty
                        </small>
                    </div>
                </div>
            </div>

            <!-- Performance Metrics -->
            <div class="card mt-4">
                <div class="card-body">
                    <h6 class="card-title">📊 Redis Performance Benefits</h6>
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="text-primary fw-bold" style="font-size: 2rem;">&lt;1ms</div>
                            <small class="text-muted">Read Speed</small>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="text-success fw-bold" style="font-size: 2rem;">&lt;2ms</div>
                            <small class="text-muted">Write Speed</small>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="text-info fw-bold" style="font-size: 2rem;">99.9%</div>
                            <small class="text-muted">Uptime</small>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="text-warning fw-bold" style="font-size: 2rem;">∞</div>
                            <small class="text-muted">Scalability</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .empty-cart-illustration {
            animation: float 3s ease-in-out infinite;
        }
        
        .product-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            cursor: pointer;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        
        .product-icon {
            transition: transform 0.3s ease;
        }
        
        .product-card:hover .product-icon {
            transform: scale(1.2);
        }
        
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        
        .card {
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
        
        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
        
        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .display-6 {
                font-size: 1.5rem;
            }
            
            .empty-cart-illustration {
                font-size: 6rem !important;
            }
        }
    </style>

    <script>
        // Add some interactive elements
        document.addEventListener('DOMContentLoaded', function() {
            // Add click animation to product cards
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach(card => {
                card.addEventListener('click', function() {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });
            
            // Auto-submit form when clicking product card (except button)
            productCards.forEach(card => {
                card.addEventListener('click', function(e) {
                    if (e.target.tagName !== 'BUTTON' && e.target.type !== 'submit') {
                        const form = this.querySelector('form');
                        if (form) {
                            form.submit();
                        }
                    }
                });
            });
            
            // Add floating animation to main cart icon
            const cartIcon = document.querySelector('.empty-cart-illustration');
            setInterval(() => {
                cartIcon.style.animation = 'none';
                setTimeout(() => {
                    cartIcon.style.animation = 'float 3s ease-in-out infinite';
                }, 10);
            }, 7000);
        });
    </script>
}