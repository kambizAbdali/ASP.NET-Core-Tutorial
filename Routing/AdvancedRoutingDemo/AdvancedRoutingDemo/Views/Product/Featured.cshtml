@model IEnumerable<AdvancedRoutingDemo.Models.Product>

@{
    ViewData["Title"] = "Featured Products";
}

<h1>Featured Products</h1>

<div class="alert alert-info">
    This page is accessed via a named route: <code>FeaturedProducts</code>
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@product.Category</h6>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>$@product.Price</strong></p>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Details", "Product", new { id = product.Id })" 
                       class="btn btn-primary btn-sm">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a href="@Url.Action("List", "Product")" class="btn btn-secondary">View All Products</a>
</div>