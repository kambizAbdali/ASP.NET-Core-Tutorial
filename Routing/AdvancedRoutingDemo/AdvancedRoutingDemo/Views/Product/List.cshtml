@model IEnumerable<AdvancedRoutingDemo.Models.Product>

@{
    ViewData["Title"] = "Products List";
}

<h1>Products</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Filters</h5>
            </div>
            <div class="card-body">
                <h6>Categories:</h6>
                <ul class="list-unstyled">
                    <li><a href="@Url.Action("List", "Product")">All Categories</a></li>
                    <li><a href="@Url.Action("List", "Product", new { category = "Electronics" })">Electronics</a></li>
                    <li><a href="@Url.Action("List", "Product", new { category = "Education" })">Education</a></li>
                </ul>
            </div>
        </div>
        
        <div class="mt-3">
            <h6>Other Routes:</h6>
            <ul class="list-unstyled">
                <li><a href="@Url.RouteUrl("FeaturedProducts")">Featured Products</a></li>
                <li><a href="~/special-offers">Special Offers</a></li>
                <li><a href="@Url.Action("SeoDetails", "Product", new { category = "electronics", productName = "laptop" })">SEO Example</a></li>
            </ul>
        </div>
    </div>
    
    <div class="col-md-9">
        @if (!string.IsNullOrEmpty(ViewBag.Category))
        {
            <div class="alert alert-info">
                Showing products in category: <strong>@ViewBag.Category</strong>
                <a href="@Url.Action("List", "Product")" class="float-end">Show All</a>
            </div>
        }

        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@product.Category</h6>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text"><strong>$@product.Price</strong></p>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Details", "Product", new { id = product.Id })" 
                               class="btn btn-primary btn-sm">View Details</a>
                            <a href="@Url.Action("SeoDetails", "Product", new { category = product.Category.ToLower(), productName = product.Name.ToLower().Replace(" ", "-") })" 
                               class="btn btn-outline-secondary btn-sm">SEO URL</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-warning">
                No products found@(ViewBag.Category != null ? $" in category '{ViewBag.Category}'" : "").
            </div>
        }
    </div>
</div>