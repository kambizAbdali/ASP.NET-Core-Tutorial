@model IEnumerable<AdvancedRoutingDemo.Models.Product>

@{
    ViewData["Title"] = "Special Offers";
}

<h1>Special Offers</h1>

<div class="alert alert-success">
    This page uses <code>~/special-offers</code> route which overrides the controller prefix.
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-success">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">@product.Name</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">@product.Category</h6>
                    <p class="card-text">@product.Description</p>
                    <p class="h5 text-success"><strong>Special Price: $@product.Price</strong></p>
                    <span class="badge bg-danger">Limited Offer</span>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Details", "Product", new { id = product.Id })" 
                       class="btn btn-success btn-sm">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No special offers available at the moment.
    </div>
}

<div class="mt-3">
    <a href="@Url.Action("List", "Product")" class="btn btn-secondary">Back to All Products</a>
</div>