<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Advanced Routing Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .route-info {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .nav-link.active {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Routing Demo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List", "Product")">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.RouteUrl("FeaturedProducts")">Featured</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/special-offers">Special Offers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("UrlGenerationDemo", "Home")">URL Generation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/api-docs">Swagger</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/Admin/Dashboard">Dashboard</a></li>
                                <li><a class="dropdown-item" href="/Admin/Users">Users</a></li>
                                <li><a class="dropdown-item" href="/super-admin">Super Admin</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (ViewBag.CurrentRoute != null)
            {
                <div class="route-info">
                    <h6>Current Route Information:</h6>
                    <pre>@ViewBag.CurrentRoute</pre>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Advanced Routing Demo - 
            <a href="@Url.Action("Privacy", "Home")">Privacy</a> |
            <a href="@Url.RouteUrl("policy")">Policy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>