@model IdentityCompleteProject.Services.PaginatedList<IdentityCompleteProject.Models.User>

@{
    ViewData["Title"] = "Users in Role";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Users in Role: @ViewBag.RoleName</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to Roles</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Users List</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Email Confirmed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>
                                        @if (user.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">No</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <nav>
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                            <a class="page-link" asp-action="UsersInRole" asp-route-roleId="@ViewBag.RoleId" asp-route-page="@(Model.PageIndex - 1)">Previous</a>
                        </li>
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                <a class="page-link" asp-action="UsersInRole" asp-route-roleId="@ViewBag.RoleId" asp-route-page="@i">@i</a>
                            </li>
                        }
                        
                        <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                            <a class="page-link" asp-action="UsersInRole" asp-route-roleId="@ViewBag.RoleId" asp-route-page="@(Model.PageIndex + 1)">Next</a>
                        </li>
                    </ul>
                </nav>
            }
            else
            {
                <div class="alert alert-info">No users found in this role.</div>
            }
        </div>
    </div>
</div>