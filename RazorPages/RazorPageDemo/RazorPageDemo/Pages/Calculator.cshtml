@page
@model RazorPageDemo.Pages.CalculatorModel

@{
    ViewData["Title"] = "Calculator";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Calculator</h1>

        <form method="post" class="card mt-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Calc.Number1" class="form-label">First Number</label>
                        <input asp-for="Calc.Number1" class="form-control" />
                    </div>
                    
                    <div class="col-md-6">
                        <label asp-for="Calc.Number2" class="form-label">Second Number</label>
                        <input asp-for="Calc.Number2" class="form-control" />
                    </div>
                </div>

                <div class="row g-2 mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" asp-page-handler="Add" class="btn btn-success w-100">Add</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="submit" asp-page-handler="Subtract" class="btn btn-warning w-100">Subtract</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="submit" asp-page-handler="Multiply" class="btn btn-info w-100">Multiply</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="submit" asp-page-handler="Divide" class="btn btn-danger w-100">Divide</button>
                    </div>
                </div>
            </div>
        </form>

        @if (Model.Calc.Result != 0)
        {
            <div class="card mt-4">
                <div class="card-body text-center">
                    <h3>Result: @Model.Calc.Result</h3>
                    <p class="text-muted">Operation: @Model.Calc.Operation</p>
                </div>
            </div>
        }
    </div>
</div>