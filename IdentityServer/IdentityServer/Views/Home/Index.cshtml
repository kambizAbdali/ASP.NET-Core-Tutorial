@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Identity Server</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 100px 0;
            text-align: center;
        }
        .features-section {
            padding: 80px 0;
        }
        .feature-card {
            text-align: center;
            padding: 30px;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }
        .feature-icon {
            font-size: 3rem;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="display-4 mb-4">Identity Server 4</h1>
            <p class="lead mb-4">OpenID Connect and OAuth 2.0 Framework for ASP.NET Core</p>
            <div class="mt-4">
                <a href="~/.well-known/openid-configuration" class="btn btn-light btn-lg me-3">Discovery Document</a>
                <a href="/Account/Login" class="btn btn-outline-light btn-lg">Login</a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">🔐</div>
                        <h4>Authentication</h4>
                        <p>Secure authentication using OpenID Connect protocol with support for multiple identity providers.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">🔑</div>
                        <h4>Authorization</h4>
                        <p>Fine-grained authorization with OAuth 2.0, supporting various grant types and scopes.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">⚡</div>
                        <h4>API Security</h4>
                        <p>Protect your APIs with JWT tokens and manage access control efficiently.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="bg-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h3 class="mb-4">Development Server</h3>
                    <p class="text-muted mb-4">
                        This is a development instance of Identity Server 4. Use the test accounts above to authenticate.
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5>Test Users</h5>
                                    <ul class="list-unstyled">
                                        <li><strong>alice</strong> / password (Admin)</li>
                                        <li><strong>bob</strong> / password (User)</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h5>Endpoints</h5>
                                    <ul class="list-unstyled">
                                        <li><a href="/.well-known/openid-configuration">Discovery</a></li>
                                        <li><a href="/connect/authorize">Authorize</a></li>
                                        <li><a href="/connect/token">Token</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p class="mb-0">Identity Server 4 &copy; 2024 - Development Server</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>