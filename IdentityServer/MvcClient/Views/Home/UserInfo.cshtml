@{
    ViewData["Title"] = "User Information";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC Client</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .claim-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .claim-header {
            border-radius: 10px 10px 0 0 !important;
        }
        .claim-badge {
            font-size: 0.75rem;
        }
        .claim-type {
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
        }
        .user-avatar {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">User Information</li>
                    </ol>
                </nav>
                
                <h2>👤 User Information</h2>
                <p class="lead">User claims and information from Identity Server</p>
            </div>
        </div>

        <!-- User Profile Summary -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card claim-card">
                    <div class="card-body text-center">
                        <div class="user-avatar">
                            @User.FindFirst("given_name")?.Value?[0]@User.FindFirst("family_name")?.Value?[0]
                        </div>
                        <h4 class="mt-3">@User.FindFirst("name")?.Value</h4>
                        <p class="text-muted">@User.FindFirst("email")?.Value</p>
                        
                        @if (User.FindFirst("role")?.Value == "admin")
                        {
                            <span class="badge bg-danger">Administrator</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">User</span>
                        }
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="card claim-card h-100">
                    <div class="card-header claim-header bg-primary text-white">
                        <h5 class="mb-0">📋 User Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <strong>User ID:</strong><br>
                                <code>@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value</code>
                            </div>
                            <div class="col-6">
                                <strong>Authentication Method:</strong><br>
                                <span class="badge bg-info">@User.FindFirst("amr")?.Value</span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-6">
                                <strong>First Name:</strong><br>
                                @User.FindFirst("given_name")?.Value
                            </div>
                            <div class="col-6">
                                <strong>Last Name:</strong><br>
                                @User.FindFirst("family_name")?.Value
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-6">
                                <strong>Email Verified:</strong><br>
                                @if (User.FindFirst("email_verified")?.Value == "true")
                                {
                                    <span class="badge bg-success">✅ Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">❌ Not Verified</span>
                                }
                            </div>
                            <div class="col-6">
                                <strong>Authentication Time:</strong><br>
                                @{
                                    var authTime = User.FindFirst("auth_time")?.Value;
                                    if (authTime != null)
                                    {
                                        var authDateTime = DateTimeOffset.FromUnixTimeSeconds(long.Parse(authTime)).LocalDateTime;
                                        <span>@authDateTime.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- All Claims Table -->
        <div class="row">
            <div class="col-12">
                <div class="card claim-card">
                    <div class="card-header claim-header bg-info text-white">
                        <h5 class="mb-0">🔍 All User Claims</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th width="40%">Claim Type</th>
                                        <th width="60%">Claim Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var claims = User.Claims.OrderBy(c => c.Type).ToList();
                                        var claimGroups = claims.GroupBy(c => c.Type.Split('/').Last().Split('.').Last());
                                    }
                                    
                                    @foreach (var claimGroup in claimGroups)
                                    {
                                        <tr class="table-active">
                                            <td colspan="2">
                                                <strong>📁 @claimGroup.Key.ToUpper() CLAIMS</strong>
                                            </td>
                                        </tr>
                                        
                                        foreach (var claim in claimGroup)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="claim-type">@claim.Type</span>
                                                    @if (claim.Type.Contains("nameidentifier"))
                                                    {
                                                        <span class="badge bg-primary claim-badge">SUB</span>
                                                    }
                                                    else if (claim.Type.Contains("role"))
                                                    {
                                                        <span class="badge bg-success claim-badge">ROLE</span>
                                                    }
                                                    else if (claim.Type.Contains("email"))
                                                    {
                                                        <span class="badge bg-info claim-badge">EMAIL</span>
                                                    }
                                                    else if (claim.Type.Contains("authentication"))
                                                    {
                                                        <span class="badge bg-warning claim-badge">AUTH</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (claim.Type.Contains("website") && claim.Value.StartsWith("http"))
                                                    {
                                                        <a href="@claim.Value" target="_blank">@claim.Value</a>
                                                    }
                                                    else if (claim.Type == "role")
                                                    {
                                                        <span class="badge bg-@(claim.Value == "admin" ? "danger" : "secondary")">@claim.Value</span>
                                                    }
                                                    else if (claim.Type == "email_verified")
                                                    {
                                                        <span class="badge bg-@(claim.Value == "true" ? "success" : "warning")">@claim.Value</span>
                                                    }
                                                    else
                                                    {
                                                        @claim.Value
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="alert alert-info mt-3">
                            <h6>💡 About Claims:</h6>
                            <p class="mb-0">
                                Claims are pieces of information about the user that are issued by the Identity Server. 
                                They represent the user's identity and are used for authorization decisions.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <a href="/" class="btn btn-secondary me-md-2">← Back to Home</a>
                    <a href="/Home/CallApi" class="btn btn-success me-md-2">🌤️ Call Weather API</a>
                    <a href="/Home/Tokens" class="btn btn-warning me-md-2">🔑 View Tokens</a>
                    <a href="/Home/Secure" class="btn btn-primary">🔐 Secure Page</a>
                    @if (User.IsInRole("admin"))
                    {
                        <a href="/Home/Admin" class="btn btn-danger">⚡ Admin Page</a>
                    }
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card claim-card">
                    <div class="card-header claim-header bg-secondary text-white">
                        <h5 class="mb-0">📊 Claim Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h4>@claims.Count</h4>
                                <small class="text-muted">Total Claims</small>
                            </div>
                            <div class="col-md-3">
                                <h4>@claims.GroupBy(c => c.Type.Split('/').Last().Split('.').Last()).Count()</h4>
                                <small class="text-muted">Claim Categories</small>
                            </div>
                            <div class="col-md-3">
                                <h4>@(claims.Any(c => c.Type.Contains("role")) ? "Yes" : "No")</h4>
                                <small class="text-muted">Role Claims</small>
                            </div>
                            <div class="col-md-3">
                                <h4>@(claims.Any(c => c.Type.Contains("email")) ? "Yes" : "No")</h4>
                                <small class="text-muted">Email Claims</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>