@model ModelBindingDemo.Models.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order Form";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2>Online Order Form</h2>
        <hr />
        
        <form asp-action="OrderForm" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Customer Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Customer.FirstName" class="control-label"></label>
                                <input asp-for="Customer.FirstName" class="form-control" />
                                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Customer.LastName" class="control-label"></label>
                                <input asp-for="Customer.LastName" class="form-control" />
                                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Customer.Email" class="control-label"></label>
                                <input asp-for="Customer.Email" class="form-control" />
                                <span asp-validation-for="Customer.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Customer.Phone" class="control-label"></label>
                                <input asp-for="Customer.Phone" class="form-control" />
                                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Order.ProductName" class="control-label"></label>
                                <input asp-for="Order.ProductName" class="form-control" />
                                <span asp-validation-for="Order.ProductName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Order.Quantity" class="control-label"></label>
                                <input asp-for="Order.Quantity" class="form-control" />
                                <span asp-validation-for="Order.Quantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Order.Price" class="control-label"></label>
                                <input asp-for="Order.Price" class="form-control" />
                                <span asp-validation-for="Order.Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order.Notes" class="control-label"></label>
                        <textarea asp-for="Order.Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Order.Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Payment Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Payment.CardNumber" class="control-label"></label>
                                <input asp-for="Payment.CardNumber" class="form-control" placeholder="1234 5678 9012 3456" />
                                <span asp-validation-for="Payment.CardNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Payment.ExpiryDate" class="control-label"></label>
                                <input asp-for="Payment.ExpiryDate" class="form-control" placeholder="MM/YY" />
                                <span asp-validation-for="Payment.ExpiryDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Payment.CVV" class="control-label"></label>
                                <input asp-for="Payment.CVV" class="form-control" placeholder="123" />
                                <span asp-validation-for="Payment.CVV" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group text-center">
                <button type="submit" class="btn btn-success btn-lg">Submit Order</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>

        <!-- Example form with prefix for testing -->
        <hr />
        <h4>Test Form with Prefix</h4>
        <form asp-action="ProcessWithPrefix" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>User First Name</label>
                <input name="user.FirstName" class="form-control" value="John" />
            </div>
            <div class="form-group">
                <label>User Last Name</label>
                <input name="user.LastName" class="form-control" value="Doe" />
            </div>
            <div class="form-group">
                <label>User Age</label>
                <input name="user.Age" class="form-control" value="30" />
            </div>
            <button type="submit" class="btn btn-primary">Test Prefix Binding</button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}