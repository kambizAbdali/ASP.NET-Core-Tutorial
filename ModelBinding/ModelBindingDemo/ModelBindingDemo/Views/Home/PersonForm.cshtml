@model ModelBindingDemo.Models.Entities.Person

@{
    ViewData["Title"] = "Person Information Form";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>Person Information Form</h2>
        <hr />
        
        <form asp-action="PersonForm" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <h4 class="mt-4">Address</h4>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Address.City" class="control-label"></label>
                        <input asp-for="Address.City" class="form-control" />
                        <span asp-validation-for="Address.City" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Address.Street" class="control-label"></label>
                        <input asp-for="Address.Street" class="form-control" />
                        <span asp-validation-for="Address.Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Address.PostalCode" class="control-label"></label>
                        <input asp-for="Address.PostalCode" class="form-control" />
                        <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <h4 class="mt-4">Phone Numbers</h4>
            <div id="phoneNumbers">
                @for (int i = 0; i < Model.PhoneNumbers.Count; i++)
                {
                    <div class="row phone-number-group mb-3">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="PhoneNumbers[i].Type" class="control-label"></label>
                                <select asp-for="PhoneNumbers[i].Type" class="form-control">
                                    <option value="Mobile">Mobile</option>
                                    <option value="Home">Home</option>
                                    <option value="Work">Work</option>
                                </select>
                                <span asp-validation-for="PhoneNumbers[i].Type" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="form-group">
                                <label asp-for="PhoneNumbers[i].Number" class="control-label"></label>
                                <input asp-for="PhoneNumbers[i].Number" class="form-control" />
                                <span asp-validation-for="PhoneNumbers[i].Number" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Save Information</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}