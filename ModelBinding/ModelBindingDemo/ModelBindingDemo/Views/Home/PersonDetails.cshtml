@model ModelBindingDemo.Models.Entities.Person

@{
    ViewData["Title"] = "Person Details";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h2>Person Details</h2>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <h4>Personal Information</h4>
                        <dl class="row">
                            <dt class="col-sm-4">ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4">First Name:</dt>
                            <dd class="col-sm-8">@Model.FirstName</dd>

                            <dt class="col-sm-4">Last Name:</dt>
                            <dd class="col-sm-8">@Model.LastName</dd>

                            <dt class="col-sm-4">Age:</dt>
                            <dd class="col-sm-8">@Model.Age</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Created At:</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>

                            <dt class="col-sm-4">Active:</dt>
                            <dd class="col-sm-8">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <h4>Address Information</h4>
                        @if (Model.Address != null)
                        {
                            <dl class="row">
                                <dt class="col-sm-4">City:</dt>
                                <dd class="col-sm-8">@Model.Address.City</dd>

                                <dt class="col-sm-4">Street:</dt>
                                <dd class="col-sm-8">@Model.Address.Street</dd>

                                <dt class="col-sm-4">Postal Code:</dt>
                                <dd class="col-sm-8">@Model.Address.PostalCode</dd>
                            </dl>
                        }
                        else
                        {
                            <p class="text-muted">No address information available.</p>
                        }
                    </div>
                </div>

                <div class="mt-4">
                    <h4>Phone Numbers</h4>
                    @if (Model.PhoneNumbers != null && Model.PhoneNumbers.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Number</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var phone in Model.PhoneNumbers)
                                {
                                    <tr>
                                        <td>@phone.Type</td>
                                        <td>@phone.Number</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No phone numbers available.</p>
                    }
                </div>

                <div class="mt-4">
                    <a href="@Url.Action("PersonForm")" class="btn btn-primary">Edit Person</a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>