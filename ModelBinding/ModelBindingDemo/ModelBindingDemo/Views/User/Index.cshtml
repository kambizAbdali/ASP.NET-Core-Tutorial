@model List<ModelBindingDemo.Models.Entities.User>

@{
    ViewData["Title"] = "All Users";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2>All Users</h2>
        <hr />
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Created At</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Username</td>
                        <td>@user.Email</td>
                        <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Profile", new { id = user.Id })" class="btn btn-sm btn-info">View Profile</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="mt-3">
            <a href="@Url.Action("Register")" class="btn btn-primary">Add New User</a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>