@model ModelBindingDemo.Models.DTOs.UploadProfilePictureDto

@{
    ViewData["Title"] = "Upload Profile Picture";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Upload Profile Picture</h2>
        <hr />
        
        <form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ProfilePicture" class="control-label"></label>
                <input asp-for="ProfilePicture" class="form-control" type="file" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Upload</button>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}