@{
    ViewData["Title"] = "Upload Successful";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h2>Upload Successful</h2>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["Success"]
                    </div>
                }
                
                <p>Your profile picture has been uploaded successfully.</p>
                
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go to Home</a>
                    <a href="@Url.Action("UploadProfilePicture")" class="btn btn-secondary">Upload Another</a>
                </div>
            </div>
        </div>
    </div>
</div>