@model ModelBindingDemo.Models.DTOs.ProductDto

@{
    ViewData["Title"] = "Create Product";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Create Product</h2>
        <hr />
        
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group form-check">
                <input asp-for="InStock" class="form-check-input" />
                <label asp-for="InStock" class="form-check-label"></label>
                <span asp-validation-for="InStock" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Create Product</button>
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
        
        @if (ViewBag.ProductionDate != null)
        {
            <div class="alert alert-info mt-3">
                Production Date from Custom Model Binder: @ViewBag.ProductionDate.ToString("yyyy-MM-dd")
            </div>
        }
        
        @if (ViewBag.Tags != null)
        {
            <div class="alert alert-info mt-3">
                Tags from CSV Model Binder: @string.Join(", ", ViewBag.Tags)
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}