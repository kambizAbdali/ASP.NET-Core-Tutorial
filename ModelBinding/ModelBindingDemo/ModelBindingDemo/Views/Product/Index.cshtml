@model List<ModelBindingDemo.Models.Entities.Product>

@{
    ViewData["Title"] = "All Products";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2>All Products</h2>
        <hr />
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>In Stock</th>
                    <th>Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>$@product.Price</td>
                        <td>@product.Category</td>
                        <td>
                            @if (product.InStock)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td>@product.CreatedAt.ToString("MMM dd, yyyy")</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = product.Id })" class="btn btn-sm btn-info">View</a>
                            <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="mt-3">
            <a href="@Url.Action("Create")" class="btn btn-primary">Add New Product</a>
            <a href="@Url.Action("Search")" class="btn btn-info">Search Products</a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>